{
	"name": "better-pm",
	"version": "0.3.1",
	"description": "Better CLI for package manager operations (especially in monorepos)",
	"type": "module",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/fdarian/better-pm.git"
	},
	"bin": {
		"pm": "./bin.mjs"
	},
	"files": [
		"bin.mjs"
	],
	"imports": {
		"#src/*": "./src/*"
	},
	"scripts": {
		"format": "biome check --write",
		"check:tsc": "tsgo --noEmit",
		"build": "bun scripts/build-npm.ts",
		"ci:version": "bunx changeset version && bun scripts/sync-versions.ts && bun install --lockfile-only",
		"ci:release": "bun run build && bun scripts/publish-npm.ts"
	},
	"optionalDependencies": {
		"better-pm-darwin-arm64": "0.3.1",
		"better-pm-darwin-x64": "0.3.1",
		"better-pm-linux-x64": "0.3.1",
		"better-pm-linux-arm64": "0.3.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@changesets/cli": "^2.29.8",
		"@effect/cli": "^0.73.1",
		"@effect/platform": "^0.94.2",
		"@effect/platform-bun": "^0.87.1",
		"@types/bun": "latest",
		"@typescript/native-preview": "^7.0.0-dev.20260130.1",
		"effect": "^3.19.15",
		"typescript": "latest"
	},
	"dependencies": {
		"picocolors": "^1.1.1"
	}
}
